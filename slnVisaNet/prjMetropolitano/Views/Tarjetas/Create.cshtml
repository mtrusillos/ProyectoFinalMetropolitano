@model prjMetropolitano.Models.TARJETA

@{
    ViewBag.Title = "Enlazar nueva tarjeta";
}

<h2>Vincular Tarjeta </h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
           <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.COD_TARJETA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.COD_TARJETA, new { htmlAttributes = new { @class = "form-control", @maxlength = "12" } })
                @Html.ValidationMessageFor(model => model.COD_TARJETA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FE_EXP_TARJETA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FE_EXP_TARJETA, "{0:yyyy-MM-dd}", new { @class = "form-control",@type = "date"})
                @Html.ValidationMessageFor(model => model.FE_EXP_TARJETA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.COD_TIPO_TARJETA, "COD_TIPO_TARJETA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("COD_TIPO_TARJETA", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.COD_TIPO_TARJETA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.COD_USUARIO_TARJETA, "COD_USUARIO_TARJETA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("COD_USUARIO_TARJETA", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.COD_USUARIO_TARJETA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

