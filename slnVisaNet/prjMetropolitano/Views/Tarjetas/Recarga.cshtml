@model prjMetropolitano.Models.TARJETA

@{
    ViewBag.Title = "Recarga";
}

<h2>Recarga en linea</h2>
@if (TempData["alertMessage"] != null)
{
    <script type="text/javascript">
       alert("@TempData["alertMessage"]");
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.COD_TARJETA)
        @Html.HiddenFor(model => model.ESTADO_TARJETA)
        @Html.HiddenFor(model => model.FE_EXP_TARJETA)
        @Html.HiddenFor(model => model.COD_TIPO_TARJETA)
        @Html.HiddenFor(model => model.COD_USUARIO_TARJETA)
        @Html.HiddenFor(model => model.SALDO_TARJETA)

        <div>
            <table>
                <tr>
                    <td align="left" valign="middle">
                        <b>TARJETA<b>
                    </td>
                    <td align="right" valign="middle">
                        @Html.DisplayFor(model => model.COD_TARJETA, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td align="left" valign="middle" style="text-align:center">
                        <b>SALDO ACTUAL<b>
                    </td>
                    <td align="right" valign="middle">
                        @Html.DisplayFor(model => model.SALDO_TARJETA, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
            </table>
        </div>


        <div style="width:10%;height:40px;position:center;align-content:center">    </div>
        <div style="width:100%;height:50px;position:center;align-content:center;font-size:20px">
            <b>DATOS DEL PAGO<b>
        </div>

        <div style="width:10%;height:20px;position:center;align-content:center">    </div>
        <div class="form-group">

            @Html.LabelFor(model => model.NRO_TC, htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRO_TC, new { htmlAttributes = new { @class = "form-control", @maxlength = "16" } })
                @Html.ValidationMessageFor(model => model.NRO_TC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.CVV_TC, htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CVV_TC, new { htmlAttributes = new { @class = "form-control", @maxlength = "3" } })
                @Html.ValidationMessageFor(model => model.CVV_TC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.VENCIMIENTO_TC, htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VENCIMIENTO_TC, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.VENCIMIENTO_TC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.TITULAR_TC, htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TITULAR_TC, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.TITULAR_TC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.MONTO, htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MONTO, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.MONTO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
