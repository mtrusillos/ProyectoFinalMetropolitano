@model prjMetropolitano.Models.TARJETA

@{
    ViewBag.Title = "Actualizar vigencia";
}

    <h2>Actualizar vigencia</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.COD_TARJETA)
    @Html.HiddenFor(model => model.ESTADO_TARJETA)
    @Html.HiddenFor(model => model.FE_EXP_TARJETA)
    @Html.HiddenFor(model => model.COD_TIPO_TARJETA)
    @Html.HiddenFor(model => model.COD_USUARIO_TARJETA)
    @Html.HiddenFor(model => model.SALDO_TARJETA)
    <div class="form-group">
        <b>
            @Html.LabelFor(model => model.COD_TARJETA, htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.COD_TARJETA, new { htmlAttributes = new { @class = "form-control", @maxlength = "12" } })
        </div>
    </div>
    <div class="form-group">
        <b>
            @Html.LabelFor(model => model.FE_EXP_TARJETA, htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.FE_EXP_TARJETA, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>
    </div>
    <div style="width:100%;height:50px;position:center;align-content:center;font-size:20px">
        </div>
        <div style="width:100%;height:50px;position:center;align-content:center;font-size:20px">
            <b>VALIDACION SUNEDU<b>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CODCARNET, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CODCARNET, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.CODCARNET, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Renovacion")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
